<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <JDBC name="postgresql" tablename="logs">
            <DriverManager connectionString="jdbc:postgresql://localhost:5432/postgres"
                           userName="postgres" password="qwerty" driverClassName="org.postgresql.Driver" />
            <Column name="date" isEventTimestamp="true" />
            <Column name="level" pattern="%level" isUnicode="false" />
            <Column name="message" pattern="%message" isUnicode="false" />
            <Column name="exception" pattern="%ex{full}" isUnicode="false" />
        </JDBC>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Console>
        <File name="fout" fileName="logs/logs.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
            </PatternLayout>
        </File>
        <RollingFile name="RollingFile" fileName="logs/app.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="part2.lesson15.Main_02_15_01" level="debug" additivity="false">
            <AppenderRef ref="fout"/>
        </Logger>
        <Logger name="part2.lesson15.dao.RoleDAOImplTest" level="trace" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="fout"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="postgresql"/>
        </Root>
    </Loggers>
</Configuration>